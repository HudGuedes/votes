<h3 class='text-center'>Novo usuário</h3>
<hr/>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "form-control", autocomplete: "name" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :occupation %><br />
    <%= select_tag(:occupation, options_for_select([['Piloto', true], ['Mecânico', false]]), { class: 'form-control' })%>
  </div>

  <div class="form-group mb-3">
    <%= f.label :team %><br />
    <%= f.text_field :team, class: "form-control", autocomplete: "name" %>
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar", class: "btn btn-light" %>
    <%= link_to('Voltar', new_user_session_path, class: 'btn btn-light') %>
  </div>
<% end %>